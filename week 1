# https://dodona.be/nl/courses/5447/series/63925/activities/2038783829

def iszigzag(reeks: list) -> bool:
    """Controleert of de reeks zigzag-gesorteerd is.
    Even index: element >= volgende
    Oneven index: element <= volgende
    """
    for i in range(len(reeks) - 1):
        if i % 2 == 0:  # even index: element >= volgende
            if reeks[i] < reeks[i + 1]:
                return False
        else:  # oneven index: element <= volgende
            if reeks[i] > reeks[i + 1]:
                return False
    return True

def zigzag_traag(reeks: list):
    """Zigzag-sorteren volgens de trage methode (in-place).
    Sorteer eerst de lijst en wissel vervolgens om de zigzag te creëren.
    """
    reeks.sort()  # Sorteer de lijst eerst
    for i in range(0, len(reeks) - 1, 2):  # range(start, stop, stap) !!!!!
        # start → 0, stop → len(reeks)-1 exclusief, stap → 2
        reeks[i], reeks[i + 1] = reeks[i + 1], reeks[i]


def zigzag_snel(reeks: list):
    """Zigzag-sorteren volgens de snelle methode (in-place).
    Vergelijk telkens een element met zijn buren en wissel indien nodig.
    """
    for i in range(0, len(reeks), 2):
        if i > 0 and reeks[i] < reeks[i - 1]:                       #=> i = 0 lukt niet, want i-1: # check linkerburen
            reeks[i], reeks[i - 1] = reeks[i - 1], reeks[i]         #voorkomt dat je probeert reeks[-1] te vergelijken als i=0
        if i < len(reeks) - 1 and reeks[i] < reeks[i + 1]:          #=> i+1 valt buiten de rol: # check rechterburen
            reeks[i], reeks[i + 1] = reeks[i + 1], reeks[i]         #voorkomt dat je probeert reeks[i+1] te vergelijken bij het laatste element







