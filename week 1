#list[x], betekent “geef het element op index x”. WEL lijst.index(x) GEBRUIKEN !!
# niet list gebruiken als variabele!! is een gereserveerd woord !!


def zoek(lijst: list, x: int):
    kleinsteIndex = 0                       # index, niet de waarde
    grootsteIndex = len(lijst) - 1          # laatste index

    while kleinsteIndex <= grootsteIndex:   # zoekzone blijft geldig
        midden = (kleinsteIndex + grootsteIndex) // 2   # middenindex

        if lijst[midden] == x:              # element gevonden
            return midden

        if lijst[midden] > x:               # x zit links
            grootsteIndex = midden - 1      # grens opschuiven

        if lijst[midden] < x:               # x zit rechts
            kleinsteIndex = midden + 1      # grens opschuiven



# https://dodona.be/nl/courses/5447/series/63925/activities/101669433

def combisom(lijst:list, getal: int):
    n = len(lijst)
    for i in range(n):                              #i moet in range(n) anders zoals bij i in lijst is i een waarde en geen index!
        for j in range(i+1, n):                     #for i in range(n): → i is een index (0, 1, 2 … n-1)
            if lijst[i] + lijst[j] == getal:        #for i in lijst: → i is een waarde uit de lijst
                return True

    return False


# https://dodona.be/nl/courses/5447/series/63925/activities/1325500143

def samenvoegen(reeks1, reeks2):
    """Voegt twee reeksen beurtelings samen tot de kortste op is."""
    n = min(len(reeks1), len(reeks2))
    resultaat = []
    for i in range(n):                      #kan ook met while i <lengte_korste + i+=1
        resultaat.append(reeks1[i])
        resultaat.append(reeks2[i])
    return resultaat


def weven(reeks1, reeks2):
    """Voegt twee reeksen beurtelings samen tot de langste op is.
    Herhaalt de kortste reeks vanaf het begin als ze korter is."""
    n = max(len(reeks1), len(reeks2))
    resultaat = []
    for i in range(n):
        resultaat.append(reeks1[i % len(reeks1)])  #De modulo (%) berekent de rest van de deling.
        resultaat.append(reeks2[i % len(reeks2)]) #Dus als i groter wordt dan de lengte van reeks1, springt de index automatisch terug naar 0.
    return resultaat


def ritsen(reeks1, reeks2):
    """Voegt twee reeksen beurtelings samen tot de kortste op is,
    daarna worden de rest van de langste reeks toegevoegd."""
    n = min(len(reeks1), len(reeks2))
    resultaat = []
    for i in range(n):
        resultaat.append(reeks1[i])
        resultaat.append(reeks2[i])
    # voeg de rest van de langste reeks toe
    if len(reeks1) > len(reeks2):
        resultaat.extend(reeks1[n:])
    elif len(reeks2) > len(reeks1):
        resultaat.extend(reeks2[n:])
    return resultaat


#uitleg van reeks1 = ['A', 'B'], dus len(reeks1) = 2.
#| i | i % 2 | reeks1[i % 2] |
#| - | ----- | ------------- |
#| 0 | 0     | 'A'           |
#| 1 | 1     | 'B'           |
#| 2 | 0     | 'A'           |
#| 3 | 1     | 'B'           |
#Zo herhaal je dus automatisch 'A', 'B', 'A', 'B', … zolang het nodig is.


